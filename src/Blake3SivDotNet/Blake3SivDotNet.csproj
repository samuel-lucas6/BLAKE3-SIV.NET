<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <Version>1.0.0</Version>
        <Authors>Samuel Lucas</Authors>
        <Description>A .NET implementation of Taylor Campbell's BLAKE3-SIV.</Description>
        <Copyright>Copyright (c) 2023 Samuel Lucas</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/samuel-lucas6/BLAKE3-SIV.NET</PackageProjectUrl>
        <RepositoryUrl>https://github.com/samuel-lucas6/BLAKE3-SIV.NET</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>blake3-siv blake3 siv</PackageTags>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Blake3" Version="0.5.1" />
    </ItemGroup>

</Project>
